<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/LogoWrapper"
        android:layout_width="fill_parent" android:layout_weight=".5" android:layout_height="wrap_content">
        <ImageView android:id="@+id/BeerAdvocateLogo" android:src="@drawable/ic_launcher_passenger"
            android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"></ImageView>
    </LinearLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_weight=".5" android:layout_height="wrap_content" android:id="@+id/ToggleWrapper">
        <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ToggleSpeaking" android:text="@string/toggle_speaking" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:enabled="false" android:textOn="@string/speaking_enabled" android:textOff="@string/speaking_disabled" android:padding="10pt"></ToggleButton>
    </RelativeLayout>
</LinearLayout>
